@model List<MVCBartenderApp.Models.Order>

<div class="container">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Cocktail</th>
                <th scope="col">User</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                if (x.Status == MVCBartenderApp.Models.Enums.OrderStatus.Pending)
                {
                    <tr class="table-primary">
                        <td>@x.OrderId</td>
                        <td>@x.Cocktail.Name</td>
                        <td>@x.User.Username</td>
                        <td>@x.Status</td>
                    </tr>

                }
                else if (x.Status == MVCBartenderApp.Models.Enums.OrderStatus.Confirmed)
                {
                    <tr class="table-success">
                        <td>@x.OrderId</td>
                        <td>@x.Cocktail.Name</td>
                        <td>@x.User.Username</td>
                        <td>@x.Status</td>
                    </tr>
                }
                else
                {
                    <tr class="table-danger">
                        <td>@x.OrderId</td>
                        <td>@x.Cocktail.Name</td>
                        <td>@x.User.Username</td>
                        <td>@x.Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>